<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/i1"

    tools:context="com.example.mayank.findprime.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/question"
        android:textColor="#665615"
         />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"
        android:id="@+id/yes"
        android:minWidth="160dp"
        android:layout_below="@+id/ques"
        android:layout_alignRight="@+id/ques"
        android:layout_alignEnd="@+id/ques"
        android:layout_marginRight="4dp"
        android:textColor="#EAFF5E"
        android:background="@drawable/buttonshape"

android:layout_marginTop="30dp"
        android:layout_marginEnd="4dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        android:id="@+id/no"
        android:minWidth="160dp"
        android:layout_marginTop="30dp"
        android:layout_above="@+id/next"
        android:textColor="#EAFF5E"
        android:background="@drawable/buttonshape"
        android:layout_alignLeft="@+id/ques"
        android:layout_alignStart="@+id/ques"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp" />
</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/next"
        android:minWidth="340dp"
        android:layout_below="@+id/yes"
        android:textColor="#EAFF5E"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HINT"
        android:id="@+id/hint"
        android:minWidth="160dp"
        android:layout_below="@+id/next"
        android:textColor="#EAFF5E"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHEAT"
        android:id="@+id/cheat"
        android:minWidth="160dp"
        android:layout_below="@+id/hint"
        android:textColor="#EAFF5E"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />
</LinearLayout>
</LinearLayout>
